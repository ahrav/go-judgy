# Environment Configuration for go-judgy
# Copy this file to .env and update the values for your environment

# =============================================================================
# Temporal Configuration
# =============================================================================
TEMPORAL_HOST_PORT=temporal:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TLS_ENABLED=false
TEMPORAL_CLIENT_CERT_PATH=
TEMPORAL_CLIENT_KEY_PATH=

# =============================================================================
# Worker Configuration
# =============================================================================
WORKER_TASK_QUEUE=evaluation-queue
WORKER_MAX_CONCURRENT=10
WORKER_MAX_CONCURRENT_ACTIVITIES=100
WORKER_MAX_CONCURRENT_WORKFLOWS=100
WORKER_IDENTITY=go-judgy-worker

# =============================================================================
# LLM Configuration
# =============================================================================
LITELLM_MODEL=gpt-3.5-turbo

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Google Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_PROJECT_ID=
GOOGLE_LOCATION=us-central1

# =============================================================================
# Observability Configuration
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4317
OTEL_SERVICE_NAME=go-judgy
OTEL_SERVICE_VERSION=
OTEL_ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=8080
METRICS_PATH=/metrics

# =============================================================================
# Database Configuration (Future)
# =============================================================================
DATABASE_URL=
DATABASE_MAX_CONNECTIONS=25
DATABASE_CONNECTION_TIMEOUT=30s

# =============================================================================
# Security Configuration
# =============================================================================
ENCRYPTION_KEY=
JWT_SECRET=
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# Development Configuration
# =============================================================================
# Environment mode: development, staging, production
ENVIRONMENT=development
DEBUG=false
PROFILING_ENABLED=false

# Feature flags
FEATURE_LLM_ENABLED=true
FEATURE_MONITORING_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=false

# =============================================================================
# Docker and Kubernetes Configuration
# =============================================================================
CONTAINER_REGISTRY=localhost:5001
IMAGE_TAG=latest
NAMESPACE=go-judgy

# =============================================================================
# External Service URLs (for local development)
# =============================================================================
TEMPORAL_WEB_UI_URL=http://localhost:8080
GRAFANA_URL=http://localhost:3000
PROMETHEUS_URL=http://localhost:9090
